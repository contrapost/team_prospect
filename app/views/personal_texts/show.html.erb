<p id="notice"><%= notice %></p>

<% @personal_texts.each do |text| %>
    <%= form_tag controller: :personal_texts, action: :update do %>
        <div class="field">
          <%= text_field_tag :paragraph, text.paragraph, required: 'required' %>
        </div>
        <%= hidden_field_tag :group_member_id, @group_member.id %>
        <%= hidden_field_tag :personal_text_id, text.id %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="actions">
          <%= submit_tag 'UPDATE' %>
        </div>
    <% end %>
    <div>
      <%= link_to 'delete', {controller: :personal_texts, action: :delete, personal_text_id: text.id, group_member_id: @group_member.id},
                  data: {confirm: "Are you sure?"},
                  method: :delete, class: 'btn btn-warning' %>
    </div>
<% end %>

<%= form_tag controller: :personal_texts, action: :save do %>
    <div class="field">
      <%= text_field_tag :paragraph, nil, placeholder: 'write a paragraph about you', required: 'required' %>
    </div>
    <%= hidden_field_tag :group_member_id, @group_member.id %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="actions">
      <%= submit_tag 'SAVE' %>
    </div>
<% end %>

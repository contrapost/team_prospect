<%= form_for group_member, html: { multipart: true } do |f| %>
    <% if group_member.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(group_member.errors.count, "error") %> prohibited this group_member from being saved:</h2>

          <ul>
            <% group_member.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :photo %>
      <%= f.file_field :photo, class: 'form-control'%>
    </div>

    <div class="field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>

    <div class="field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

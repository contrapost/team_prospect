<div class="container">
  <div class="row group-member-page">
    <% @group_members.order(:id).each do |group_member| %>
        <div class="col-md-4">
          <%= link_to group_member do %>
          <%= image_tag group_member.photo.url (:thumb) %>

          <h2 class="text-center"><%= group_member.first_name %> <%= group_member.last_name %></h2>
          <% end %>
        </div>

    <% end %>
  </div>
</div>


<p id="notice"><%= notice %></p>

<h1>Images</h1>

<h3>NB! To insert image in html-code:</h3>
<ul>
  <li><strong>use photo's url</strong></li>
  <li><strong><&#37;= Image.find(image_id).title &#37;> shows title</strong></li>
</ul>

<table>
  <thead>
    <tr>
      <th>Image url</th>
      <th></th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.photo.url %></td>
        <td><%= image_tag image.photo.url %></td>
        <td><%= image.title %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p id="notice"><%= notice %></p>

<% @skills.each do |skill| %>
    <%= form_tag controller: :skills, action: :update do %>
        <div class="field">
          <%= text_field_tag :name, skill.name, required: 'required' %>
        </div>
        <%= hidden_field_tag :group_member_id, @group_member.id %>
        <%= hidden_field_tag :skill_id, skill.id %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="actions">
          <%= submit_tag 'UPDATE LINK' %>
        </div>
    <% end %>
    <div>
      <%= link_to 'delete', {controller: :skills, action: :delete, skill_id: skill.id, group_member_id: @group_member.id},
                  data: {confirm: "Are you sure?"},
                  method: :delete, class: 'btn btn-warning' %>
    </div>
<% end %>

<%= form_tag controller: :skills, action: :save do %>
    <div class="field">
      <%= text_field_tag :name, nil, placeholder: 'your skill here', required: 'required' %>
    </div>
    <%= hidden_field_tag :group_member_id, @group_member.id %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="actions">
      <%= submit_tag 'SAVE' %>
    </div>
<% end %>

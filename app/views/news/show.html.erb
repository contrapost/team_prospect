<div class="container news-container">

  <div class="col-xs-12">
    <%= image_tag @news.photo.url %>
    <%= @news.photo_comment %> <!--TODO: Benny, please style this line. Italic maybe?-->
  </div>
  <div class="col-xs-12">
    <p>
    <h1><strong><%= @news.title %></strong>

    </h1>
    </p>
  </div>
  <div class="col-xs-12">
    <p>
      <% @news.news_paragraphs.order(:id).each do |paragraph| %>
        <p><%= paragraph.paragraph %></p>
    <% end %>
    </p>
  </div>
  <div class="col-xs-12">
    <% unless @news.link.nil? %>
        <p>Link: <a href="<%= @news.link %>"><%= URI.parse(@news.link).host %></a></p> <!--TODO: Benny, please style it-->
    <% end %>
  </div>
  <div class="col-xs-12">
    <p>
      <small>Publisert:
      <%= @news.created_at.strftime('%d.%m.%Y') %>
      </small>
    </p>
    <% if @news.created_at != @news.updated_at %>
        <p>
          <strong>Oppdatert: </strong>
          <%= @news.updated_at.strftime('%d.%m.%Y') %>
        </p>
    <% end %>

  </div>

  <% if admin_signed_in? %>
      <%= link_to 'Edit', edit_news_path(@news) %> |
      <%= link_to 'Back', admin_news_path %>
  <% end %>
</div>

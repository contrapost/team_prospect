<p id="notice"><%= notice %></p>

<h1>News</h1>

<table>
  <thead>
  <tr>
    <th>Photo</th>
    <th>Title</th>
    <th>News text</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @news.each do |news| %>
      <tr>
        <td><%= image_tag news.photo.url %></td>
        <td><%= news.title %></td>
        <td><%= news.news_paragraphs.first.paragraph %>
        </td>
        <td><%= link_to 'Show', news, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_news_path(news), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning' %></td>
        <td><%= link_to 'Manage paragraphs', news_paragraphs_show_path(news_id: news.id), class: 'btn btn-default' %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News', new_news_path %>

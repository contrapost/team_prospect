<p id="notice"><%= notice %></p>

<h1>News</h1>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Title</th>
      <th>News text</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= image_tag news.photo.url %></td>
        <td><%= news.title %></td>
        <td><% news.news_paragraphs.order(:id).each do |paragraph| %>
              <p><%= paragraph.paragraph %></p>
              <% end %>
        </td>
        <td><%= link_to 'Show', news %></td>
      </tr>
    <% end %>
  </tbody>
</table>
